<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xuruihan.cats.MapActivity">

    <ImageView
        android:id="@+id/cbPicView"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:src="@drawable/tom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/user_sign_in_button"
        android:layout_marginLeft="0dp" />
    <Button
        android:id="@+id/logout_button"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="Logout"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbPicView"
        android:layout_marginTop="32dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginBottom="20dp" />


</android.support.constraint.ConstraintLayout>
